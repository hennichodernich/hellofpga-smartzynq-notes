/ {
  usb_phy0: phy0 {
    #phy-cells = <0>;
    compatible = "ulpi-phy";
    reg = <0xe0002000 0x1000>;
    view-port = <0x0170>;
    drv-vbus;
  };
  pps {
    compatible = "pps-gpio";
    gpios = <&gpio0 54 0>;
    capture-clear;
  };
};

&gem0 {
  phy-handle = <&ethernet_phy>;
	ps7_ethernet_0_mdio: mdio {
  		ethernet_phy: phy@1 {
		  device_type = "ethernet-phy";
  		  reg = <1>;
  		};
		gmii_to_rgmii_0: gmii_to_rgmii_0@8 {
			compatible = "xlnx,gmii-to-rgmii-1.0";
			phy-handle = <&ethernet_phy>;
			reg = <8>;
		};
	};
};

&usb0 {
  dr_mode = "host";
  usb-phy = <&usb_phy0>;
  xlnx,phy-reset-gpio = <&gpio0 46 0>;
};

&spi0 {
  spidev@0 {
    compatible = "ltc2488";
    reg = <0x0>;
    spi-max-frequency = <10000000>;
  };
  spidev@1 {
    compatible = "ltc2488";
    reg = <0x1>;
    spi-max-frequency = <10000000>;
  };
  spidev@2 {
    compatible = "ltc2488";
    reg = <0x2>;
    spi-max-frequency = <10000000>;
  };
};
